function loadAllC() {
    var htmltxt = "";
    $.ajax({
        type: "post",
        contentType: "application/json",
        url: "webService/labInfoService.asmx/findAll",
        dataType: "json",
        async: false,
        success: function (result) {
            var res = eval(result.d);
            var state;
            var flag;
            htmltxt = "<table class='mytableheader'> <tr class='bgf1f1f1'><td>序号</td><td>实验室名称</td><td>可容纳人数</td><td>简介</td><td>状态</td><td>操作</td></tr>";
            $.each(res, function (i, d) {
                var n = i;
                var no = n + 1;
                if (d.备注1 == "1") {
                    state = "启用";
                    flag = "关闭";
                }
                else {
                    state = "关闭";
                    flag = "启用";
                }
                htmltxt += " <tr><td>" + no + "</td><td>" + d.名称 + "</td><td>" + d.容纳人数 + "</td><td>" + d.简介 + "</td> <td>" + state + "</td><td> <span onclick='edit(" + d.主键 + ");'>编辑</span><span style=''><input type='button'  value='" + flag + "' onclick='state(" + d.主键 + ");' /></span></td></tr>";
            });
            $("#contents").html(htmltxt);
        },
        error: function (jqXHR, textStatus, errorThrown) {
            alert(jqXHR + textStatus + errorThrown);
        }
    });
}
