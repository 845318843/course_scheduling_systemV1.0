function getone(id) {
    $.ajax(
    {
        type: "post",
        url: "../../webService/labInfoService.asmx/getone",
        data: '{"id":"' + id + '"}',
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        async: false,
        success: function (result) {
            var res = eval(result.d);
            $.each(res, function (i, d) {
                $("#name").val(d.name);
                $("#count").val(d.count);
                $("#des").val(d.describe);
            });
        },
        error: function (err) {

        }
    }
    );
}
