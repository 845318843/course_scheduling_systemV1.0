var ad = "";
var sec = "";
var week = "";
var courseid = "";
$(function () {
    var id = sessionStorage["labID"];
    //getone(id);
    $("#section").click(function () {
        ad = sessionStorage["courseID"];
        if (ad != null) {
            layer.open({
                type: 2,
                title: '节次选择',
                shadeClose: true,
                shade: 0.5,
                area: ['450px', '55%'],
                content: '../../section.aspx',
                end: function () {
                    sessionStorage["sec"] = "1";
                    //$("#mainDiv").load("lab.aspx");
                }
            });
        }
        else
            alert("请先添加课程基本信息！");
    });
    $("#week").click(function () {
        sec = sessionStorage["sec"];
        if (sec == "1") {
            layer.open({
                type: 2,
                title: '周次选择',
                shadeClose: true,
                shade: 0.5,
                area: ['450px', '55%'],
                content: '../../weeks.aspx',
                end: function () {
                    loadMain();
                }
            });
        }
        else
            alert("请先选择节次！");
    });
    $("#adds").click(function () {
        var course = $("#course").val();
        var classs = $("#classs").val();
        var tea = $("#teacher").val();
        var count = parseInt($("#count").val());
        var n=parseInt(sessionStorage["num"]);
        var num = $("#num").val();
        var labNo = sessionStorage["labID"];
        var lab = sessionStorage["lab"];
        if (count > n)
            alert("超过实验室可容纳人数上限！");
        else if (course == ''||classs==''||tea=='')
            alert("有必填项为空,请重新核对！")
        else
        add(course, classs, tea, count, num, lab,labNo);

    })
})
